@model StudentInfoViewModel

@{
    ViewData["Title"] = "Student info";
}


<div class="card">
    <div class="card-header">
        <h3>Student: @Model.FirstName @Model.LastName</h3>
        <br />
        <span>Birth date: @Model.BirthDate.ToShortDateString()</span>
        <br />
        <span>Email: @Model.Email</span>
        <br />
        <span>Gender: @Model.Gender</span>
        <br />
        <span>Previous grade: @Model.PreviousGrade</span>
        <br />
        <span>
            Group: @if (Model.Group == null)
            {
                <span>Not assigned</span>
            } 
            @Model.Group
        </span>
        <br />
    </div>
</div>