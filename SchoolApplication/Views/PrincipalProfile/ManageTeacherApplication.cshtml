
@model ManageTeacherApplicationViewModel

@{
    ViewData["Title"] = "Review application form";
}

<form asp-action="ApproveTeacherApplication" method="post" class="form-horizontal" role="form">

    <input type="hidden" asp-for="Id" />

    <div class="card">
        <div class="card-header">
            <h3>Applicant: @Model.FirstName @Model.LastName</h3>
            <br />
            <span>Birth date: @Model.BirthDate.ToShortDateString()</span>
            <br />
            <span>Email: @Model.Email</span>
            <br />
            <span>Gender: @Model.Gender</span>
            <br />
            <span>Previous grade: @Model.Specialization</span>
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Approve" />
            <a class="btn btn-secondary" asp-area="" asp-controller="PrincipalProfile" asp-action="DeclineTeacherApplication">
                Decline
            </a>
        </div>
    </div>

</form>

