@model TeacherInfoViewModel

@{
    ViewData["Title"] = "Teacher info";
}


<div class="card">
    <div class="card-header">
        <h3>Student: @Model.FirstName @Model.LastName</h3>
        <br />
        <span>Birth date: @Model.BirthDate.ToShortDateString()</span>
        <br />
        <span>Email: @Model.Email</span>
        <br />
        <span>Gender: @Model.Gender</span>
        <br />
        <span>Specialization: @Model.Specialization</span>
        <br />
        <span>
            Assigned groups: @if (Model.GroupName == null)
            {
                <span>Not assigned</span>
            }
            @Model.GroupName
        </span>
        <br />
        <br />
        <a class="btn btn-dark" href='javascript:history.go(-1)'>Back</a>
    </div>
</div>