
@model IEnumerable<TeacherInfoViewModel>

@{
    ViewData["Title"] = "Teachers";
}

<h2>Teachers</h2>

<div class="table">
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Surname</th>
                <th>Specialization</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var teacher in Model)
            {
                <tr>
                    <td>@teacher.FirstName</td>
                    <td>@teacher.LastName</td>
                    <td>@teacher.Specialization</td>
                    <td><a class="btn btn-primary" asp-area="" asp-controller="PrincipalProfile" asp-action="TeacherInfo" asp-route-id="@teacher.Id">Review</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>