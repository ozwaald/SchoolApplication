
@model PrincipalProfileViewModel

@{
    ViewData["Title"] = "Profile";
}

<div class="container">
    <div class="card">
        <div class="card-header">
            <h3>Total number of students at school: @Model.StudentsCount 
            <a class="btn btn-primary" asp-controller="PrincipalProfile" asp-action="StudentsList">View</a></h3> 
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Total number of active teachers at school: @Model.TeachersCount 
            <a class="btn btn-primary" asp-controller="PrincipalProfile" asp-action="TeachersList">View</a></h3>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Total number of student applications: @Model.StudentsApplicationsCount 
            <a class="btn btn-primary" asp-controller="PrincipalProfile" asp-action="StudentApplicationsList">View</a></h3> 
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Total number of teacher applications: @Model.TeachersApplicationsCount 
            <a class="btn btn-primary" asp-controller="PrincipalProfile" asp-action="TeacherApplicationsList">View</a></h3>
        </div>
    </div>
</div>