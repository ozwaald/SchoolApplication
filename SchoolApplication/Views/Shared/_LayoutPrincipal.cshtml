<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - School</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="PrincipalProfile" asp-action="Index">School</a>
                
                <button class="btn btn-primary" id="menu-toggle">Toggle Menu</button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="d-flex" id="wrapper">
        <div class="border-right" id="sidebar-wrapper">
            <div class="list-group list-group-flush">
                <a class="list-group-item list-group-item-action" asp-area="" asp-controller="PrincipalProfile" asp-action="Index">Home</a>
                <a class="list-group-item list-group-item-action" asp-area="" asp-controller="PrincipalProfile" asp-action="LessonsList">Lessons</a>
                <a class="list-group-item list-group-item-action" asp-area="" asp-controller="PrincipalProfile" asp-action="Groups">Groups</a>
                <ul class="list-unstyled components list-group-item-action">
                    <li>
                        <a href="#listsSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle list-group-item list-group-item-action list-unstyled">Lists</a>
                        <ul class="collapse list-unstyled" id="listsSubmenu">
                            <li>
                                <a class="list-group-item list-group-item-action" asp-area="" asp-controller="PrincipalProfile" asp-action="StudentsList">List of Students</a>
                            </li>
                            <li>
                                <a class="list-group-item list-group-item-action" asp-area="" asp-controller="PrincipalProfile" asp-action="TeachersList">List of Teachers</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="#requestsSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle list-group-item list-group-item-action list-unstyled">Requests</a>
                        <ul class="collapse list-unstyled" id="requestsSubmenu">
                            <li>
                                <a class="list-group-item list-group-item-action" asp-area="" asp-controller="PrincipalProfile" asp-action="StudentApplicationsList">Student requests</a>
                            </li>
                            <li>
                                <a class="list-group-item list-group-item-action" asp-area="" asp-controller="PrincipalProfile" asp-action="TeacherApplicationsList">Teacher requests</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="#rolesSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle list-group-item list-group-item-action list-unstyled">School roles</a>
                        <ul class="collapse list-unstyled" id="rolesSubmenu">
                            <li>
                                <a class="list-group-item list-group-item-action" asp-area="" asp-controller="Administration" asp-action="CreateRole">Create role</a>
                            </li>
                            <li>
                                <a class="list-group-item list-group-item-action" asp-area="" asp-controller="Administration" asp-action="Roles">Roles</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>

        <div id="page-content-wrapper">
            <div class="container-fluid">
                <main id="principalmain" role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - School - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
